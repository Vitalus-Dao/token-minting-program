{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "client/src/dist",
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["client/src/helpers/*"],
      "@instructions/*": ["client/src/instructions/*"]

      // "@types": ["types/index.ts"]
    }
  },
  "include": [
    "client/src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
